{% extends 'admin_base.html.twig' %}

{% block title %}Naudotojas{% endblock %}

{% block body %}
    <h1>Naudotojas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Vardas</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Pavardė</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>El. paštas</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Amžius</th>
                <td>{{ user.age }}</td>
            </tr>
            <tr>
                <th>Lytis</th>
                <td>{{ user.gender }}</td>
            </tr>
            <tr>
                <th>Gimimo data</th>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fizinis asmuo</th>
                <td>{{ user.isIndividual ? 'Taip' : 'Ne' }}</td>
            </tr>
            <tr>
                <th>Alga</th>
                <td>{{ user.salary }}</td>
            </tr>
            <tr>
                <th>Pozicija</th>
                <td>{{ user.position }}</td>
            </tr>
            <tr>
                <th>Dirba nuo</th>
                <td>{{ user.workSinceDate ? user.workSinceDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Priedai prie atlyginimo</th>
                <td>{{ user.additionalCompensation }}</td>
            </tr>
            <tr>
                <th>Užblokuotas</th>
                <td>{{ user.isBlocked ? 'Taip' : 'Ne' }}</td>
            </tr>
            <tr>
                <th>Rolės</th>
                <td>{{ user.roles }}</td>
            </tr>
            <tr>
                <th>Užsiregistravimo data</th>
                <td>{{ user.dateCreated ? user.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Atnaujinimo data</th>
                <td>{{ user.dateUpdated ? user.dateUpdated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>paskutinį kartą buvo prisijungęs</th>
                <td>{{ user.lastVisitDate ? user.lastVisitDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Atgal į sąrašą</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">Redaguoti</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
