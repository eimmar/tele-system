{% extends 'admin_base.html.twig' %}

{% block title %}Naudotojų sąrašas{% endblock %}

{% block body %}
    <h1>Naudotojų sąrašas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vardas</th>
                <th>Pavardė</th>
                <th>El. paštas</th>
                <th>Amžius</th>
                <th>Lytis</th>
                <th>Gimimo data</th>
                <th>Fizinis asmuo</th>
                <th>Alga</th>
                <th>Pozicija</th>
                <th>Dirba nuo</th>
                <th>Priedai</th>
                <th>Užblokuotas</th>
                <th>Rolės</th>
                <th>Užsiregistravo</th>
                <th>Redaguota</th>
                <th>Paskutinį kartą prisijungęs</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.isIndividual ? 'Taip' : 'Ne' }}</td>
                <td>{{ user.salary }}</td>
                <td>{{ user.position }}</td>
                <td>{{ user.workSinceDate ? user.workSinceDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.additionalCompensation }}</td>
                <td>{{ user.isBlocked ? 'Taip' : 'Ne' }}</td>
                <td>{{ user.roles }}</td>
                <td>{{ user.dateCreated ? user.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.dateUpdated ? user.dateUpdated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.lastVisitDate ? user.lastVisitDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Atidaryti</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Redaguoti</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="20">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Naujas</a>
{% endblock %}
