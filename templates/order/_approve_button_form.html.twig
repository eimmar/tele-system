<form method="post" action="{{ path('approve_order', {'id': order.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="POST">
    <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ order.id) }}">
    <button class="btn">Approve</button>
</form>