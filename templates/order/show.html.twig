{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ order.startDate ? order.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ order.endDate ? order.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TotalSum</th>
                <td>{{ order.totalSum }}</td>
            </tr>
            <tr>
                <th>Tax</th>
                <td>{{ order.tax }}</td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ order.dateCreated ? order.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateModified</th>
                <td>{{ order.dateModified ? order.dateModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">back to list</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
