{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class=" mt-4 ">
    <div class="d-flex p-2 text-center justify-content-center">
        <form class="form-signin " action="{{ path("fos_user_security_check") }}" method="post">

            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <h1 class="h3 mb-3 font-weight-normal">Ä®veskite savo duomenis</h1>

            <label class="sr-only" for="username">{{ 'profile.show.email'|trans }}</label>
            <input class="form-control" type="text" id="email" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

            <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
            <div class="checkbox mb-3">
                <input class="" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label id="remember_me" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>


            <input class="btn btn-lg btn-default btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
</div>

