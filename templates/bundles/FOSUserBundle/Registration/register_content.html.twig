{% trans_default_domain 'FOSUserBundle' %}
<div class=" mt-4 ">
    <div class="d-flex text-center p-2 justify-content-center">
        <div class="">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_widget(form) }}
            <div>
                <button class="btn btn-lg btn-default btn-block" type="submit" id="_submit" name="_submit">{{ 'registration.submit'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>